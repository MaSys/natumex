<% image = image_path('mexico-4.jpg') %>
<%= render partial: 'devise/shared/styles', locals: {image: image} %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="wrap">
        <p class="form-title"><%= t('change_your_password') %></p>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'login' }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token, wrapper: false %>
          <%= f.input :password, label: "New password", required: true, autofocus: true, wrapper: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirm your new password", required: true, wrapper: false %>
          <%= f.button :submit, t('change_your_password'), class: "btn btn-sm" %>
          <div class="remember-forgot">
            <div class="row">
              <div class="col-md-12 forgot-pass-content">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
         <% end %>
      </div>
    </div>
  </div>
</div>
