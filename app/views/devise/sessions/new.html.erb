<% image = image_path('mexico-3.jpg') %>
<%= render partial: 'devise/shared/styles', locals: {image: image} %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="wrap">
        <p class="form-title">Sign In</p>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login' }) do |f| %>
          <%= f.input :email, required: false, autofocus: true, wrapper: false %>
          <%= f.input :password, required: false, wrapper: false %>
          <%= f.submit t("log_in"), class: "btn btn-sm" %>
          <div class="remember-forgot">
            <div class="row">
              <div class="col-md-12 forgot-pass-content">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
         <% end %>
      </div>
    </div>
  </div>
</div>
